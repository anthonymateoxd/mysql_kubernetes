pipeline {
    agent any
    stages {
        stage('ConfigMap y Secret') {
            steps {
                bat 'kubectl apply -f mysql-configmap.yaml'
                bat 'kubectl apply -f mysql-secret.yaml'
            }
        }
        stage('Persistent Volume Claim') {
            steps {
                bat 'kubectl apply -f mysql-pvc.yaml'
            }
        }
        stage('Deployment y Service') {
            steps {
                bat 'kubectl apply -f mysql-deployment.yaml'
                bat 'kubectl apply -f mysql-service.yaml'
            }
        }
        stage('Verificar Despliegue') {
            steps {
                bat 'kubectl get pods -l app=mysql'
                bat 'kubectl get services mysql-service'
            }
        }
    }
}