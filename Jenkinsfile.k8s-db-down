pipeline {
    agent any

    stages {
        stage('Eliminar recursos MySQL de Kubernetes') {
            steps {
                script {
                    echo "üîª Eliminando recursos MySQL del cl√∫ster..."
                    bat 'kubectl delete -f mysql-service.yaml --ignore-not-found'
                    bat 'kubectl delete -f mysql-deployment.yaml --ignore-not-found'
                    bat 'kubectl delete -f mysql-pvc.yaml --ignore-not-found'
                    bat 'kubectl delete -f mysql-secret.yaml --ignore-not-found'
                    bat 'kubectl delete -f mysql-configmap.yaml --ignore-not-found'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Recursos eliminados correctamente del cl√∫ster."
        }
        failure {
            echo "‚ùå Ocurri√≥ un error al eliminar los recursos. Revisa los logs."
        }
    }
}
